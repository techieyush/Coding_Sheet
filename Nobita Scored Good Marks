import java.util.*;
public class Main {
    public static void main (String args[]) {
     Scanner sc = new Scanner(System.in);
      int testCase=sc.nextInt();
      while(testCase-->0)
      {
          int num1=sc.nextInt();
          int num2=sc.nextInt();
          int val=num1%num2;
          if((num2-val)<val)
          {
             System.out.println(num2-val); 
          }
          else
          {
               System.out.println(val);
          }
         
      }


    }
}
